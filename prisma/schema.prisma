generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Config {
  id   String
  name String @id @unique
}

model Level {
  userId String @id @unique
  dezixp Int
}

model FeatureFlags {
  id       String @id @unique
  features Int
}

model Messages {
  messageId String   @id @unique
  message   String
  timestamp DateTime
}

model Voice {
  voiceId     String        @id @unique
  owner       String
  private     Boolean
  locked      Boolean
  VoiceAccess VoiceAccess[]
}

model VoiceAccess {
  voiceId String
  userId  String
  Voice   Voice  @relation(fields: [voiceId], references: [voiceId])

  @@id([voiceId, userId])
}

model User {
  id        String @id @unique
  blockedBy User[] @relation("blocked")
  blocked   User[] @relation("blocked")
  friends   User[] @relation("friends")
  friendOf  User[] @relation("friends")
}

model UserConfig {
  userId String  @id @unique
  ping   Boolean
  prefix String
  suffix String
  limit  Int
}

model Keks {
  userId String @id @unique
  keks   Int
}

model Ticket {
  messageId     String          @id @unique
  channelId     String
  title         String
  description   String
  ticketMessage TicketMessage[]
  ticketChannel TicketChannel[]
}

model Rules {
  message String @id @unique
  channel String
  guild   String @unique
}

model TicketMessage {
  messageId String @id @unique
  ticketId  String
  ticket    Ticket @relation(fields: [ticketId], references: [messageId])
  userId    String
  message   String
  timestamp Int
}

model TicketChannel {
  channelId String @id @unique
  ticket    Ticket @relation(fields: [ticketId], references: [messageId])
  ticketId  String
}

model RemberRole {
  roleId String
  userId String
  guild  String

  @@id([roleId, userId])
}

model RoleExplanation {
  guildId   String
  messageId String @id @unique
  channelId String
}

model JoinMessage {
  guildId String @id @unique
  userId  String @unique
}

model Warnings {
  userId String @id @unique
  guild  String
  count  Int
}
